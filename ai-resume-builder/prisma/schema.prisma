// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
    url      = env("DATABASE_URL") // Đưa dòng này trở lại

}

// 1. Bảng Người dùng (Dùng chung cho cả Ứng viên & Nhà tuyển dụng)
model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  name      String?
  password  String   // Lưu hash password
  role      Role     @default(CANDIDATE) // Phân quyền
  createdAt DateTime @default(now())

  // Quan hệ ngược
  candidateProfiles CandidateProfile[]

  jobs             Job[]             // Nếu là Recruiter thì có nhiều Job
  sentQuestions     Question[] @relation("SentQuestions")
  companyId   String?  @db.ObjectId
  company     Company? @relation(fields: [companyId], references: [id])
  receivedQuestions Question[] @relation("ReceivedQuestions")
}

// 2. Hồ sơ Ứng viên
model CandidateProfile {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
  
  headline    String?  // Ví dụ: Senior React Developer
  phone       String?
  cvUrl       String?  // Link PDF
  skills      String[] // ["React", "NodeJS"]
  experience  Json?    // Lưu dạng JSON cho linh hoạt
  education   Json?
  
  applications Application[]
}

// 3. Tin tuyển dụng
model Job {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  companyName String?  // Tên công ty/nhà máy
  description String   // Mô tả chi tiết công việc
  requirements String  // Yêu cầu công việc
  location    String
  salaryRange String?
  startDate   DateTime? // Thời gian dự kiến đi làm
  deadline    DateTime? // Hạn nộp hồ sơ
  applyLink   String?   // Link đăng ký (bit.ly...)
  hotline     String?   // Hotline liên hệ
  
  status      JobStatus @default(OPEN)
  createdAt   DateTime  @default(now())
  questions   Question[]
  recruiterId String   @db.ObjectId
  recruiter   User     @relation(fields: [recruiterId], references: [id])
  companyId   String?  @db.ObjectId
  company     Company? @relation(fields: [companyId], references: [id])
  applications Application[]
}
// 4. Đơn ứng tuyển (Bảng nối giữa Job và Candidate)
model Application {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  jobId        String   @db.ObjectId
  job          Job      @relation(fields: [jobId], references: [id])
  
  candidateId  String   @db.ObjectId
  candidate    CandidateProfile @relation(fields: [candidateId], references: [id])

  status       AppStatus @default(PENDING)
  aiMatchScore Int?      // Điểm AI chấm (0-100)
  aiAnalysis   String?   // Nhận xét của AI
  appliedAt    DateTime  @default(now())
  
  interviews   Interview[]
}

// 5. Lịch phỏng vấn
model Interview {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  applicationId String   @db.ObjectId
  application   Application @relation(fields: [applicationId], references: [id])
  
  date          DateTime
  notes         String?
  rating        Int?     // Đánh giá 1-5 sao
  status        InterviewStatus @default(PENDING)

}
model Otp {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   
  code      String   // Mã 6 số
  purpose   OtpPurpose // Sử dụng Enum để quản lý mục đích
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@unique([email, purpose]) // Mỗi email tại một thời điểm chỉ có 1 mã cho 1 mục đích
}
model Question {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  content     String   // Câu hỏi từ Ứng viên
  answer      String?  // Câu trả lời từ Nhà tuyển dụng (null nếu chưa phản hồi)
  isPublic    Boolean  @default(false) // Nhà tuyển dụng có cho phép mọi người cùng xem?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Quan hệ
  jobId       String   @db.ObjectId
  job         Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)

  senderId    String   @db.ObjectId // Người hỏi (Candidate)
  sender      User     @relation("SentQuestions", fields: [senderId], references: [id])

  recruiterId String   @db.ObjectId // Người trả lời (Recruiter)
  recruiter   User     @relation("ReceivedQuestions", fields: [recruiterId], references: [id])
}
model Company {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String   @unique
  description     String?
  address         String?
  website         String?
  logoUrl         String?
  status          CompanyStatus @default(PENDING)
  
  // TRƯỜNG QUAN TRỌNG: Lưu các thay đổi đang chờ Admin duyệt
  // Ví dụ: { "address": "Địa chỉ mới", "website": "https://newsite.com" }
  pendingChanges  Json?    
  
  createdBy       String   @db.ObjectId
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  recruiters      User[]   
  jobs            Job[]    
}
enum CompanyStatus {
  PENDING
  APPROVED
  REJECTED
  DELETING // Đang chờ xóa
}

enum OtpPurpose {
  FORGOT_PASSWORD    // Quên mật khẩu
}
// Enums (Danh sách chọn cố định)
enum Role {
  CANDIDATE
  RECRUITER
  ADMIN
}

enum JobStatus {
  OPEN
  CLOSED
  DRAFT
}

enum AppStatus {
  PENDING
  REVIEWING
  INTERVIEW
  OFFERED
  REJECTED
}
enum InterviewStatus {
  PENDING
  COMPLETED
  CANCELLED
}