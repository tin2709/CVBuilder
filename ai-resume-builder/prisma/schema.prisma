// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
    url      = env("DATABASE_URL") // Đưa dòng này trở lại

}

// 1. Bảng Người dùng (Dùng chung cho cả Ứng viên & Nhà tuyển dụng)
model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  name      String?
  password  String   // Lưu hash password
  role      Role     @default(CANDIDATE) // Phân quyền
  createdAt DateTime @default(now())

  // Quan hệ ngược
  candidateProfiles CandidateProfile[]

  jobs             Job[]             // Nếu là Recruiter thì có nhiều Job
  sentQuestions     Question[] @relation("SentQuestions")
  companyId   String?  @db.ObjectId
  company     Company? @relation(fields: [companyId], references: [id])
  receivedQuestions Question[] @relation("ReceivedQuestions")
  savedJobIds       String[]          @db.ObjectId
  savedJobs         Job[]             @relation("UserSavedJobs", fields: [savedJobIds], references: [id])

  reviews           Review[]
  notifications     Notification[]
}

// 2. Hồ sơ Ứng viên (Mở rộng)
model CandidateProfile {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @unique @db.ObjectId // Nên là unique
  user        User     @relation(fields: [userId], references: [id])
    yDoc        Bytes?   
  
  // Quản lý quyền truy cập
  sharingMode SharingMode @default(PRIVATE)
  shareToken  String?     @unique // Token ngẫu nhiên cho link chia sẻ (vd: docs.com/cv/abc-123)

  // Danh sách những người được mời đích danh để cộng tác
  collaborators Collaboration[]
  headline    String?  // VD: Intern Fullstack Developer
  summary     String?  // Phần "Profile" trong CV của bạn
  phone       String?
  address     String?  // TP.HCM
  githubUrl   String?
  linkedinUrl String?
  portfolioUrl String?
  
  skills      String[] // ["React", "NestJS", "Spring Boot"]
  softSkills  String[] // ["Teamwork", "Problem-solving"]
  languages   Json?    // [{ "lang": "English", "level": "TOEIC 835" }]
  
  // Thay vì để Json chung chung, ta nên tạo Model để quản lý chặt chẽ:
  workExperiences WorkExperience[]
  projects        PersonalProject[]
  educations      EducationRecord[]
  
  cvUrl       String?  
  applications Application[]
}

// Model cho Kinh nghiệm làm việc (như BitGroup trong CV)
model WorkExperience {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  candidateProfileId String @db.ObjectId
  candidateProfile CandidateProfile @relation(fields: [candidateProfileId], references: [id])
  
  companyName      String
  role             String
  startDate        DateTime
  endDate          DateTime? // Null nếu đang làm việc
  description      String?   // Mô tả dự án, Tech stack
  responsibilities String[]  // Các gạch đầu dòng Key Responsibilities
}

// Model cho Dự án (như Online Video Editor, Trello Clone)
model PersonalProject {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  candidateProfileId String @db.ObjectId
  candidateProfile CandidateProfile @relation(fields: [candidateProfileId], references: [id])
  
  projectName      String
  description      String?
  techStack        String[]
  features         String[] // Các tính năng chính
  githubLink       String?
  liveLink         String?
  startDate        DateTime?
  endDate          DateTime?
}

// Model cho Học vấn
model EducationRecord {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  candidateProfileId String @db.ObjectId
  candidateProfile CandidateProfile @relation(fields: [candidateProfileId], references: [id])
  
  schoolName       String
  major            String
  startDate        DateTime?
  endDate          DateTime?
  gpa              String?
}
model Collaboration {
  id                 String           @id @default(auto()) @map("_id") @db.ObjectId
  candidateProfileId String           @db.ObjectId
  candidateProfile   CandidateProfile @relation(fields: [candidateProfileId], references: [id])
  
  userId             String           @db.ObjectId // ID người được mời
  role               CollaboratorRole @default(VIEWER)
  
  createdAt          DateTime         @default(now())

  @@unique([candidateProfileId, userId])
}
// 3. Tin tuyển dụng
model Job {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  
  documentId  String   // ID chung để nhóm các version (VD: "job_abc_123")
  version     Int      @default(1)
  isLive      Boolean  @default(false) // Chỉ 1 bản ghi duy nhất có isLive = true tại một thời điểm
  title       String
  companyName String?  // Tên công ty/nhà máy
  description String   // Mô tả chi tiết công việc
  requirements String  // Yêu cầu công việc
  location    String
  salaryRange String?
  startDate   DateTime? // Thời gian dự kiến đi làm
  deadline    DateTime? // Hạn nộp hồ sơ
  applyLink   String?   // Link đăng ký (bit.ly...)
  hotline     String?   // Hotline liên hệ
  
  status      JobStatus @default(DRAFT)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime @updatedAt 
  questions   Question[]
  recruiterId String   @db.ObjectId
  recruiter   User     @relation(fields: [recruiterId], references: [id])
  companyId   String?  @db.ObjectId
  company     Company? @relation(fields: [companyId], references: [id])
  savedByUserIds    String[] @db.ObjectId
  savedByUsers      User[]   @relation("UserSavedJobs", fields: [savedByUserIds], references: [id])
  categoryId  String?  @db.ObjectId
  category    Category? @relation(fields: [categoryId], references: [id])
  applications      Application[]
    // Để tìm nhanh bản đang Live hoặc bản nháp mới nhất
  @@index([documentId, isLive])
  @@index([documentId, version])

}
// 4. Đơn ứng tuyển (Bảng nối giữa Job và Candidate)
model Application {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  jobId        String   @db.ObjectId
  job          Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)
  // --- LIÊN KẾT VỚI JOB ---
  // Chúng ta dùng jobDocumentId thay vì jobId (ObjectId) để đơn ứng tuyển
  // luôn đi theo bài gốc, bất kể nhà tuyển dụng có sửa bản nháp hay cập nhật version.
  jobDocumentId String  
  
  // --- LIÊN KẾT VỚI ỨNG VIÊN ---
  candidateId  String   @db.ObjectId
  candidate    CandidateProfile @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  // Snapshot: Lưu lại link CV tại thời điểm ứng tuyển.
  // Lý do: Nếu sau này ứng viên sửa CV chính, nhà tuyển dụng vẫn thấy bản CV cũ họ đã nộp.
  appliedCvUrl String?

  // --- AI SCREENING DATA ---
  aiStatus     AiStatus  @default(PENDING) // Trạng thái xử lý của BullMQ
  aiMatchScore Int?      // Điểm AI chấm (0-100)
  aiAnalysis   String?   // Nhận xét chi tiết của AI về điểm mạnh/yếu
  
  // --- TRẠNG THÁI QUY TRÌNH ---
  status       AppStatus @default(PENDING)
  appliedAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Quan hệ 1-Nhiều với các buổi phỏng vấn (Vòng 1, Vòng 2...)
  interviews   Interview[]

  // Index để truy vấn nhanh
  @@index([jobDocumentId])
  @@index([candidateId])
  @@index([status])
}

// 5. Lịch phỏng vấn
model Interview {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  applicationId String   @db.ObjectId
  application   Application @relation(fields: [applicationId], references: [id])
  
  date          DateTime
  notes         String?
  rating        Int?     // Đánh giá 1-5 sao
  status        InterviewStatus @default(PENDING)

}
model Otp {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   
  code      String   // Mã 6 số
  purpose   OtpPurpose // Sử dụng Enum để quản lý mục đích
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@unique([email, purpose]) // Mỗi email tại một thời điểm chỉ có 1 mã cho 1 mục đích
}
model Question {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  content     String   // Câu hỏi từ Ứng viên
  answer      String?  // Câu trả lời từ Nhà tuyển dụng (null nếu chưa phản hồi)
  isPublic    Boolean  @default(false) // Nhà tuyển dụng có cho phép mọi người cùng xem?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Quan hệ
  jobId       String   @db.ObjectId
  job         Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)

  senderId    String   @db.ObjectId // Người hỏi (Candidate)
  sender      User     @relation("SentQuestions", fields: [senderId], references: [id])

  recruiterId String   @db.ObjectId // Người trả lời (Recruiter)
  recruiter   User     @relation("ReceivedQuestions", fields: [recruiterId], references: [id])
}
model Company {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String   @unique
  description     String?
  address         String?
  website         String?
  logoUrl         String?
  status          CompanyStatus @default(PENDING)
  
  // TRƯỜNG QUAN TRỌNG: Lưu các thay đổi đang chờ Admin duyệt
  // Ví dụ: { "address": "Địa chỉ mới", "website": "https://newsite.com" }
  pendingChanges  Json?    
  
  createdBy       String   @db.ObjectId
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  recruiters      User[]   
  jobs            Job[]    
  reviews         Review[]
}

// Model Đánh giá công ty
model Review {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  content     String
  rating      Int
  
  // --- FIX LỖI 4: Quan hệ Review - User ---
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // --- FIX LỖI 5: Quan hệ Review - Company ---
  companyId   String   @db.ObjectId
  company     Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, companyId])
}
model Category {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique // Ví dụ: Công nghệ thông tin
  slug      String   @unique // Ví dụ: cong-nghe-thong-tin
  icon      String?  // Icon hiển thị trên giao diện
  jobs      Job[]    // Quan hệ 1-Nhiều với Job
}
model Notification {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  userId         String   @db.ObjectId
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  templateKey    String
  payload        Json?    // Sẽ chứa trường "count" cho digest
  content        String?
  type           NotificationType
  isRead         Boolean  @default(false)
  link           String?
  
  // --- FIELDS CHO DIGEST ---
  isDigested     Boolean  @default(false)
  digestCount    Int      @default(1)
  digestKey      String?  @unique // Để tìm nhanh thông báo cần gom (VD: "DIGEST-userId-templateKey-targetId")

  idempotencyKey String?  @unique 
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt // Cần thiết để tính cửa sổ 10 phút
}
enum SharingMode {
  PRIVATE      // Chỉ chủ sở hữu
  PUBLIC_VIEW  // Bất kỳ ai có link đều xem được
  PUBLIC_EDIT  // Bất kỳ ai có link đều sửa được
  SPECIFIC     // Chỉ những người được chỉ định (dùng bảng trung gian)
}
enum CollaboratorRole {
  VIEWER
  EDITOR
}
enum NotificationType {
  APPLICATION_STATUS
  NEW_INTERVIEW
  AI_SCREENING_DONE
  NEW_MESSAGE
  SYSTEM
}

enum CompanyStatus {
  PENDING
  APPROVED
  REJECTED
  DELETING // Đang chờ xóa
}

enum OtpPurpose {
  FORGOT_PASSWORD    // Quên mật khẩu
}
// Enums (Danh sách chọn cố định)
enum Role {
  CANDIDATE
  RECRUITER
  ADMIN
}

enum JobStatus {
  DRAFT            // Bản nháp (chỉ Recruiter thấy)
  PENDING_REVIEW   // Đang chờ quản lý/Admin duyệt
  PUBLISHED        // Đã xuất bản (Ứng viên thấy)
  REJECTED         // Bị từ chối (Sau khi Review)
  CLOSED           // Đã đóng tin
  ARCHIVED         // Lưu trữ (Bản cũ)
}
enum AiStatus {
  PENDING      // Đang chờ đưa vào hàng đợi
  PROCESSING   // BullMQ đang gửi cho AI xử lý
  COMPLETED    // Đã có kết quả
  FAILED       // Lỗi (API AI sập, CV lỗi...)
}
enum AppStatus {
  PENDING
  REVIEWING
  INTERVIEW
  OFFERED
  REJECTED
}
enum InterviewStatus {
  PENDING
  COMPLETED
  CANCELLED
}