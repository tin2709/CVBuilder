// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
    url      = env("DATABASE_URL") // Đưa dòng này trở lại

}

// 1. Bảng Người dùng (Dùng chung cho cả Ứng viên & Nhà tuyển dụng)
model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  name      String?
  password  String   // Lưu hash password
  role      Role     @default(CANDIDATE) // Phân quyền
  createdAt DateTime @default(now())

  // Quan hệ ngược
  candidateProfiles CandidateProfile[]

  jobs             Job[]             // Nếu là Recruiter thì có nhiều Job
  sentQuestions     Question[] @relation("SentQuestions")
  companyId   String?  @db.ObjectId
  company     Company? @relation(fields: [companyId], references: [id])
  receivedQuestions Question[] @relation("ReceivedQuestions")
  savedJobIds       String[]          @db.ObjectId
  savedJobs         Job[]             @relation("UserSavedJobs", fields: [savedJobIds], references: [id])

  reviews           Review[]
  notifications     Notification[]
}

// 2. Hồ sơ Ứng viên (Mở rộng)
model CandidateProfile {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @unique @db.ObjectId // Nên là unique
  user        User     @relation(fields: [userId], references: [id])
  
  headline    String?  // VD: Intern Fullstack Developer
  summary     String?  // Phần "Profile" trong CV của bạn
  phone       String?
  address     String?  // TP.HCM
  githubUrl   String?
  linkedinUrl String?
  portfolioUrl String?
  
  skills      String[] // ["React", "NestJS", "Spring Boot"]
  softSkills  String[] // ["Teamwork", "Problem-solving"]
  languages   Json?    // [{ "lang": "English", "level": "TOEIC 835" }]
  
  // Thay vì để Json chung chung, ta nên tạo Model để quản lý chặt chẽ:
  workExperiences WorkExperience[]
  projects        PersonalProject[]
  educations      EducationRecord[]
  
  cvUrl       String?  
  applications Application[]
}

// Model cho Kinh nghiệm làm việc (như BitGroup trong CV)
model WorkExperience {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  candidateProfileId String @db.ObjectId
  candidateProfile CandidateProfile @relation(fields: [candidateProfileId], references: [id])
  
  companyName      String
  role             String
  startDate        DateTime
  endDate          DateTime? // Null nếu đang làm việc
  description      String?   // Mô tả dự án, Tech stack
  responsibilities String[]  // Các gạch đầu dòng Key Responsibilities
}

// Model cho Dự án (như Online Video Editor, Trello Clone)
model PersonalProject {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  candidateProfileId String @db.ObjectId
  candidateProfile CandidateProfile @relation(fields: [candidateProfileId], references: [id])
  
  projectName      String
  description      String?
  techStack        String[]
  features         String[] // Các tính năng chính
  githubLink       String?
  liveLink         String?
  startDate        DateTime?
  endDate          DateTime?
}

// Model cho Học vấn
model EducationRecord {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  candidateProfileId String @db.ObjectId
  candidateProfile CandidateProfile @relation(fields: [candidateProfileId], references: [id])
  
  schoolName       String
  major            String
  startDate        DateTime?
  endDate          DateTime?
  gpa              String?
}
// 3. Tin tuyển dụng
model Job {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  companyName String?  // Tên công ty/nhà máy
  description String   // Mô tả chi tiết công việc
  requirements String  // Yêu cầu công việc
  location    String
  salaryRange String?
  startDate   DateTime? // Thời gian dự kiến đi làm
  deadline    DateTime? // Hạn nộp hồ sơ
  applyLink   String?   // Link đăng ký (bit.ly...)
  hotline     String?   // Hotline liên hệ
  
  status      JobStatus @default(OPEN)
  createdAt   DateTime  @default(now())
  questions   Question[]
  recruiterId String   @db.ObjectId
  recruiter   User     @relation(fields: [recruiterId], references: [id])
  companyId   String?  @db.ObjectId
  company     Company? @relation(fields: [companyId], references: [id])
  savedByUserIds    String[] @db.ObjectId
  savedByUsers      User[]   @relation("UserSavedJobs", fields: [savedByUserIds], references: [id])
  categoryId  String?  @db.ObjectId
  category    Category? @relation(fields: [categoryId], references: [id])
  applications      Application[]
}
// 4. Đơn ứng tuyển (Bảng nối giữa Job và Candidate)
model Application {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  jobId        String   @db.ObjectId
  job          Job      @relation(fields: [jobId], references: [id])
  
  candidateId  String   @db.ObjectId
  candidate    CandidateProfile @relation(fields: [candidateId], references: [id])

  status       AppStatus @default(PENDING)
  aiMatchScore Int?      // Điểm AI chấm (0-100)
  aiAnalysis   String?   // Nhận xét của AI
  appliedAt    DateTime  @default(now())
  
  interviews   Interview[]
}

// 5. Lịch phỏng vấn
model Interview {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  applicationId String   @db.ObjectId
  application   Application @relation(fields: [applicationId], references: [id])
  
  date          DateTime
  notes         String?
  rating        Int?     // Đánh giá 1-5 sao
  status        InterviewStatus @default(PENDING)

}
model Otp {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   
  code      String   // Mã 6 số
  purpose   OtpPurpose // Sử dụng Enum để quản lý mục đích
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@unique([email, purpose]) // Mỗi email tại một thời điểm chỉ có 1 mã cho 1 mục đích
}
model Question {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  content     String   // Câu hỏi từ Ứng viên
  answer      String?  // Câu trả lời từ Nhà tuyển dụng (null nếu chưa phản hồi)
  isPublic    Boolean  @default(false) // Nhà tuyển dụng có cho phép mọi người cùng xem?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Quan hệ
  jobId       String   @db.ObjectId
  job         Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)

  senderId    String   @db.ObjectId // Người hỏi (Candidate)
  sender      User     @relation("SentQuestions", fields: [senderId], references: [id])

  recruiterId String   @db.ObjectId // Người trả lời (Recruiter)
  recruiter   User     @relation("ReceivedQuestions", fields: [recruiterId], references: [id])
}
model Company {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String   @unique
  description     String?
  address         String?
  website         String?
  logoUrl         String?
  status          CompanyStatus @default(PENDING)
  
  // TRƯỜNG QUAN TRỌNG: Lưu các thay đổi đang chờ Admin duyệt
  // Ví dụ: { "address": "Địa chỉ mới", "website": "https://newsite.com" }
  pendingChanges  Json?    
  
  createdBy       String   @db.ObjectId
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  recruiters      User[]   
  jobs            Job[]    
  reviews         Review[]
}

// Model Đánh giá công ty
model Review {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  content     String
  rating      Int
  
  // --- FIX LỖI 4: Quan hệ Review - User ---
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // --- FIX LỖI 5: Quan hệ Review - Company ---
  companyId   String   @db.ObjectId
  company     Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, companyId])
}
model Category {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique // Ví dụ: Công nghệ thông tin
  slug      String   @unique // Ví dụ: cong-nghe-thong-tin
  icon      String?  // Icon hiển thị trên giao diện
  jobs      Job[]    // Quan hệ 1-Nhiều với Job
}
model Notification {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title     String
  message   String
  type      NotificationType
  isRead    Boolean  @default(false)
  link      String?  // Link để click vào xem chi tiết (VD: /candidate/interviews/...)
  
  createdAt DateTime @default(now())
}

enum NotificationType {
  APPLICATION_STATUS
  NEW_INTERVIEW
  AI_SCREENING_DONE
  NEW_MESSAGE
  SYSTEM
}

enum CompanyStatus {
  PENDING
  APPROVED
  REJECTED
  DELETING // Đang chờ xóa
}

enum OtpPurpose {
  FORGOT_PASSWORD    // Quên mật khẩu
}
// Enums (Danh sách chọn cố định)
enum Role {
  CANDIDATE
  RECRUITER
  ADMIN
}

enum JobStatus {
  OPEN
  CLOSED
  DRAFT
}

enum AppStatus {
  PENDING
  REVIEWING
  INTERVIEW
  OFFERED
  REJECTED
}
enum InterviewStatus {
  PENDING
  COMPLETED
  CANCELLED
}